
@{
    ViewBag.Title = "Delete";
}

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .form-group.row {
        padding-top: 4px;
        padding-bottom: 4px;
    }
</style>

<h2>Delete</h2>



<div class="row">
    <div class="col-sm-6">

        <div class="row form-group">
            <div class="col-sm-4">
                <label class="form-label">ProductNO</label>
            </div>
            <div class="col-sm-8">
                <input type="text" id="txtProductNO" class="form-control" readonly />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label class="form-label">ProductName</label>
            </div>
            <div class="col-sm-8">
                <input type="text" id="txtProductName" class="form-control" readonly />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label class="form-label">Category</label>
            </div>
            <div class="col-sm-8">
                <input type="text" id="txtCategory" class="form-control" readonly />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label for="txtPrice" class="form-label">Price</label>
            </div>
            <div class="col-sm-8">
                <input type="text" id="txtPrice" class="form-control" readonly />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-8">
                <button type="button" id="btnDelete" class="btn btn-danger btn-sm">Delete</button>
                @*<button type="button" id="btnClr" class="btn btn-primary btn-sm">Clear</button>*@
            </div>
        </div>
    </div>
    <div class="col-sm-6"></div>
</div>

<input type="hidden" id="hdnProdId" value="@ViewBag.ProdId" class="form-control" />

<script src="~/Scripts/Home/Delete.js"></script>






